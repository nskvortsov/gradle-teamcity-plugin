<?xml version="1.0" encoding="UTF-8"?>
<teamcity-plugin xmlns:xsi                     = "http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation = "urn:shemas-jetbrains-com:teamcity-plugin-v1-xml">
    <info>
        <name>${ ext.name }</name>
        <display-name>${ ext.displayName }</display-name>
        <version>${ ext.version }</version>
        <description>${ ext.description }</description>
        <download-url>${ ext.downloadUrl }</download-url>
        <email>${ ext.email }</email>
        <vendor>
            <name>${ ext.vendorName }</name>
            <url>${ ext.vendorUrl }</url>
            <logo>${ ext.vendorLogo }</logo>
        </vendor>
    </info>
    <deployment use-separate-classloader="${ ext.useSeparateClassloader }"/>
</teamcity-plugin>
